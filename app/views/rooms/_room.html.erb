<article class="room">
  <h2><%= link_to room.title, room %> </h2>
  <span class="created">

  <%= 'Dono do quarto: ' + room.user.full_name %>
    
  </span>
  <p>
    <span class="location">
      <%= link_to room.location,"https://maps.google.com/?q=#{room.location}", :target => :blank %>
    </span>
  </p>
  <p><%= room.description %> </p>
  <% if belongs_to_user(room) %>
  <ul>
    <li><%= link_to 'Editar', edit_room_path(room) %></li>
    <li><%= link_to 'Deletar', room_path(room), 
      :method => :delete, :data => {:confirm => 'Deseja realmente deletar o quarto?'} %>
    </li>
  </ul>
  <% end %>
</article>
